/**index.wxss**/
.root {
  width: 100%;
  height: 100%;
  position: fixed;
  display: flex;
  flex-direction: column;
  align-items: center;
  background:linear-gradient(to top, #ce9ffc,#7367f0);
}


.content {
  margin-top: 32rpx;
  width: 686rpx;
  height: 800rpx;
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}

.btnRoot {
  margin-top: 32rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.btn {
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  padding: 0rpx 40rpx;
  margin-bottom: 40rpx;
}

.copyBtn {
  height: 100rpx;
  width: 600rpx;
  text-align: center;
  line-height: 100rpx;
  background-color: #FFEA00;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 0rpx 40rpx;
  margin-bottom: 40rpx;
}

